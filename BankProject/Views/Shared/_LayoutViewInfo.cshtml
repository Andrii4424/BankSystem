@{
    var returnUrl = Context.Request.Path + Context.Request.QueryString;
}

<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/StyleSheet.css" />
</head>
<body>
    <header class="main-header-flex">
        @RenderSection("backbutton", false)

        <h1>@ViewBag.Header</h1>

        <div class="account-log">
            @if (User != null && User.Identity.IsAuthenticated)
            {
                <p>@User.Identity.Name</p>
                <a asp-controller="Account" asp-action="Logout" class="log-links">Log out</a>
            }
            else
            {
                <a asp-controller="Account" asp-action="Register" asp-route-ReturnUrl="@returnUrl" class="log-links">Sign up</a>
                <a asp-controller="Account" asp-action="Login" asp-route-ReturnUrl="@returnUrl" class="log-links">Log in</a>
            }
        </div>
    </header>

    <main>
        @RenderBody()
    </main>
</body>
</html>
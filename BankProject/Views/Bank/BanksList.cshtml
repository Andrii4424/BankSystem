@model List<BankEntity>
@{
    ViewBag.Header = "Welcome to the bank system";
    ViewBag.Title = "Bank System";
}
@section backButton {
    <a asp-controller="Home" asp-action="Index" class="back-to-home">Back to home page</a>
}


<section class="banks-list">
    @if (Model.Count == 0)
    {
        <div class="empty-wrapper">
            <div class="empty-list">
                <h4><strong>Bank list is empty, you can create bank by link below</strong></h4>
            </div>
            <div class="link-button-wrapper">
                <a asp-controller="Bank" asp-action="AddBank" class="link-button">Add bank</a>
            </div>
        </div>
    }
    else
    {
        foreach (BankEntity bank in Model)
        {
            <a asp-controller="Bank" asp-action="BankInfo" asp-route-bankId="@bank.Id" class="bank-card-link bank-container">
                <span class="bank-details">Bank name: @bank.BankName</span>
                <span class="bank-details">Our rating is @bank.Rating</span>
                <span class="bank-details">We have @bank.ActiveClientsCount active clients</span>
            </a>
            <div class="update-delete-wrapper">
                <form asp-controller="Bank" asp-action="UpdateBank" asp-route-bankId="@bank.Id" method="get">
                    <button class="update-object">Update bank</button>
                </form>
                <form asp-controller="Bank" asp-action="DeleteBank" asp-route-bankId="@bank.Id" method="post">
                    <button class="delete-object">Delete bank</button>
                </form>
            </div>
        }

        <div class="link-button-wrapper">
            <a asp-controller="Bank" asp-action="AddBank" class="link-button">Add bank</a>
        </div>
    }
</section>
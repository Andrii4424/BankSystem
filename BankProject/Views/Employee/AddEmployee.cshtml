@{
    ViewBag.ObjectName = "Employee";
    Layout = "~/Views/Shared/_LayoutAddObject.cshtml";
}
@section backButton {
    <a asp-controller="Employee" asp-action="EmployeeInfo" asp-route-bankId="@ViewBag.BankId" class="back-to-home">Back to employee info page</a>
}

<section class="inputs">
    <form asp-controller="Employee" asp-action="AddEmployee" asp-route-bankId="@ViewBag.BankId" method="post">
        <input type="number" name="EmployeeId" placeholder="Please enter users employee id" required></input>
        <input type="text" name="JobTitle" placeholder="Please enter employee job title" required></input>
        <button type="submit">Add Employee</button>
    </form>
</section>
<section>
    <h1>@ViewBag.Message</h1>
    @if (ViewBag.Errors != null)
    {
        <div class="errors">
            @foreach (var item in ViewBag.Errors)
            {
                <h4>
                    @item
                </h4>
            }
        </div>
    }
</section>

